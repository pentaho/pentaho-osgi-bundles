<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
  ">
  <bean id="jsonOutputBuilderFactory" class="org.pentaho.osgi.messagewriter.impl.json.JSONOutputBuilderFactory"/>
  <bean id="xmlOutputBuilderFactory" class="org.pentaho.osgi.messagewriter.impl.xml.XMLOutputBuilderFactory"/>

  <bean id="messageBodyWriter" class="org.pentaho.osgi.messagewriter.impl.OutputterMessageBodyWriterImpl">
    <property name="outputBuilderFactories" ref="outputBuilderFactories"/>
  </bean>

  <service id="messageBodyWriterService" ref="messageBodyWriter"
           interface="org.pentaho.osgi.messagewriter.OutputterMessageBodyWriter"/>
  <service id="jsonOutputBuilderFactoryService" ref="jsonOutputBuilderFactory"
           interface="org.pentaho.osgi.messagewriter.builder.OutputBuilderFactory"/>
  <service id="xmlOutputBuilderFactoryService" ref="xmlOutputBuilderFactory"
           interface="org.pentaho.osgi.messagewriter.builder.OutputBuilderFactory"/>
  <reference-list id="outputBuilderFactories" interface="org.pentaho.osgi.messagewriter.builder.OutputBuilderFactory"
                  availability="optional"/>
</blueprint>