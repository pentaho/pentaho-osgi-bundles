<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd


  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd

  http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd">
  <cm:property-placeholder persistent-id="org.pentaho.osgi.i18n.webservice"
                           update-strategy="reload">
  </cm:property-placeholder>

  <cxf:bus id="i18nWebServiceBus">
  </cxf:bus>

  <jaxrs:server address="/i18n" id="localizationService">
    <jaxrs:serviceBeans>
      <ref component-id="localizationServiceImpl"/>
    </jaxrs:serviceBeans>
    <jaxrs:providers>
      <bean id="resourceBundleMessageBodyWriter"
            class="org.pentaho.osgi.i18n.webservice.ResourceBundleMessageBodyWriter"/>
    </jaxrs:providers>
  </jaxrs:server>

  <bean id="localizationServiceImpl" class="org.pentaho.osgi.i18n.webservice.LocalizationWebservice">
    <property name="localizationService" ref="delegateRef"/>
    <property name="webPackageService" ref="pentahoWebPackageService"/>
  </bean>

  <reference id="delegateRef" interface="org.pentaho.osgi.i18n.LocalizationService"/>

  <reference id="pentahoWebPackageService" interface="org.pentaho.webpackage.core.PentahoWebPackageService"/>

  <service id="PentahoI18n"
           interface="org.ops4j.pax.web.extender.whiteboard.ResourceMapping">
    <bean class="org.ops4j.pax.web.extender.whiteboard.runtime.DefaultResourceMapping">
      <property name="alias" value="/${project.artifactId}/${project.version}"/>
      <property name="path" value="/web-pentaho-i18n-webservice"/>
    </bean>
  </service>
</blueprint>
